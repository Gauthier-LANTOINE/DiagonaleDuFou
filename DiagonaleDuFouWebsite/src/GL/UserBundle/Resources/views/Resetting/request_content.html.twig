{% trans_default_domain 'FOSUserBundle' %}

<form class="form-signin" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <h2 class="form-signin-heading">Reset du mot de passe</h2>
    <div class="form-group">
        <label for="username" >{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required" class="form-control" />
    </div>
    <div class="form-group">
        <input class="btn btn-primary " type="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>