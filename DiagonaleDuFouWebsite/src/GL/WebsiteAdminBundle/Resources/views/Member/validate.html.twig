{# Page servant à valider les membres #}
{% extends "GLWebsiteAdminBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Valider Membre{% endblock %}


{% block glwebsiteadmin_body %}
    <section class="well">
        <h1 class="text-center">Valider Membre</h1>

        <h3>Prénom</h3>
        <p>
            {{ member.firstName }}
        </p>
        <h3>Nom</h3>
        <p>
            {{ member.lastName }}
        </p>
        <h3>Date de naissance</h3>
        <p>
            {{ member.birthDate|date("d/m/Y") }}
        </p>
        <h3>Email</h3>
        <p>
            {{ member.email }}
        </p>
        <h3>Téléphone domicile</h3>
        <p>
            {{ member.phoneHome }}
        </p>
        <h3>Téléphone portable</h3>
        <p>
            {{ member.mobilePhone }}
        </p>
        <h3>Autorise à utiliser son image</h3>
        <p>
            {% if member.allowImageRights %}oui{% else %}non{% endif%}
        </p>
        
        <h1 class="text-center">Compte utilisateur site web</h1>
        <h3>Login</h3>
        <p>
            {{ member.user.username }}
        </p>
        <h3>Date de création du compte</h3>
        <p>
            {{ member.user.registerDate|date("d/m/Y") }}
        </p>

        <form action="{{ path('gl_website_member_validate', {'id': member.id}) }}" method="post">
            <a href="{{ path('gl_website_member_list', {'action': 'validate'}) }}" class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Retour
            </a>

            <input type="submit" value="Valider" class="btn btn-success" />

            {{ form_rest(form) }}
        </form>

    </section>
{% endblock %}